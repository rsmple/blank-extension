{
  "name": "blank-extension",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build:extension": "vite build --config vite.config.extension.ts --mode production",
    "build:popup": "vite build --config vite.config.popup.ts --mode production",
    "build": "npm run build:extension && npm run build:popup",
    "dev:extension": "vite build --config vite.config.extension.ts --mode development",
    "dev:popup": "vite --config vite.config.popup.ts --mode development",
    "dev": "npm run dev:extension && npm run dev:popup",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "zip": "cd dist && zip -r ./extension.zip .",
    "build:zip": "npm run build && npm run zip"
  },
  "dependencies": {
    "@tanstack/vue-query": "5.83.1",
    "eco-vue-js": "0.10.68",
    "vue": "3.5.16",
    "vue-router": "4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.2",
    "@types/chrome": "0.0.325",
    "@types/jsdom": "21.1.7",
    "@types/node": "22.15.29",
    "@types/postcss-import": "14.0.3",
    "@vitejs/plugin-vue": "5.2.4",
    "@vue/tsconfig": "0.7.0",
    "autoprefixer": "10.4.21",
    "eslint": "9.28.0",
    "postcss": "8.5.4",
    "postcss-import": "16.1.0",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vue-tsc": "2.2.10"
  }
}
