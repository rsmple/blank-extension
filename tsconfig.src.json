{
  "include": [
    "env.d.ts",
    "src/models/**/*",
    "src/storage/**/*",
    "src/types/**/*",

    "src/entry/extension/**/*",
    "src/entry/content/**/*",
    "src/entry/background/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "types": ["chrome"],
    "lib": ["dom", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true
  }
}